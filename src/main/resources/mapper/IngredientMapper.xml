<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
  'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>

<mapper namespace='IngredientMapper'>

  <!-- Instead of referencing Fully Qualified Class Names we can register Aliases in mybatis-config.xml and use Alias names. -->
  <resultMap type='Ingredient' id='IngredientResult'>
    <id property='ingredientId' column='id_ingredient'/>
    <result property='name' column='name'/>
    <result property='description' column='description'/>
    <result property='creationDate' column='creation_date'/>
    <result property='modifDate' column='modif_date'/>
    <result property='validation' column='validation'/>
    <result property='disabled' column='disabled'/>
  </resultMap>
</mapper>